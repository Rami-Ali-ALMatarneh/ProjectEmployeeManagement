@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Error Page";
}

<div class="container-fluid alert-danger d-flex justify-content-center align-content-center error">
    <div class="d-flex justify-content-center flex-column m-auto">
        <i class="far fa-frown fa-pulse" style="font-size:150px"></i>
        <h1 class="text-decoration-underline">@ViewBag.ErrorMassage</h1>
        <h5 class="text-decoration-underline">Please try again...</h5>
        <div class="d-grid gap-2 d-md-block mt-4">
            <a asp-controller="home" asp-action="index" class="btn btn-success" type="button">back to Home page</a>
        </div>
    </div>
</div>
